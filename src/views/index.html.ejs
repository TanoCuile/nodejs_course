<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/css/index.css" />
  </head>
  <body>
    <h2>Actions:</h2>
    <ul>
      <li><a href="/register">Register</a></li>
      <li><a href="/log_in">Login</a></li>
    </ul>
    <h1>Hello EJS <%= name %></h1>
    <h2>Here our customers</h2>
    <ul>
      <% for(const user of users) { %>
      <li>
        <%= user.name %> (<% if (user.comments) {%><%= user.comments.length
        %>)<% } else { %> n\a <% } %>
      </li>
      <% } %>
    </ul>
    <div id="images">
      <h3>Uploaded:</h3>
      <% for(const image of images) { %>
      <div>
        <h4><%= image %></h4>
        <img src="/img/<%= image %>" style="width: 100px; height: 100px" />
      </div>
      <%}%>
    </div>
    <div>
      <form action="/upload" method="POST" enctype="multipart/form-data">
        <input type="file" name="custom_image" />
        <input type="submit" value="Upload" />
      </form>
    </div>
    <script src="https://cdn.socket.io/socket.io-3.0.1.min.js" type="text/javascript"></script>

    <script src="/js/main/index.js" type="text/javascript"></script>
  </body>
</html>
